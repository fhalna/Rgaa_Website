{
  "name": "rgaa-website",
  "version": "2.0.0",
  "description": "RGAA (Référentiel Général d'Amélioration de l'Accessibilité) - Web version by Tanaguru",
  "private": true,
  "scripts": {
    "build:css": "lessc less/style.less css/style.css && cleancss -o css/style.min.css css/style.css",
    "watch:css": "nodemon --watch less -e less --exec \"npm run build:css\"",
    "build": "npm run build:css",
    "serve": "php -S localhost:8000 -t .",
    "dev": "concurrently \"npm run watch:css\" \"npm run serve\"",
    "test": "npm run test:html && npm run test:links",
    "test:html": "node tests/validate-html.js",
    "test:links": "node tests/check-links.js",
    "translate": "node scripts/translate.js",
    "extract-data": "node scripts/extract-rgaa-data.js"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "concurrently": "^9.1.2",
    "less": "^4.2.2",
    "nodemon": "^3.1.9"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1"
  }
}
